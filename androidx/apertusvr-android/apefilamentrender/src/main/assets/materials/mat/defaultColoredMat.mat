material {
    name : DefaultColored,
    shadingModel : lit,
    parameters : [
        {
            type : float4,
            name : albedo
        },
        {
            type : float,
            name : metallic
        },
        {
            type : float,
            name : roughness
        },
        {
            type : float,
            name : reflectance
        },
        {
            type : float,
            name : ao
        },
        {
            type : float,
            name : clearCoat
        },
        {
            type : float,
            name : transmission
        }
    ]
}

fragment {
    void material(inout MaterialInputs material) {
        prepareMaterial(material);
        material.baseColor = materialParams.albedo;
        material.metallic = materialParams.metallic;
        material.roughness = materialParams.roughness;
        material.ambientOcclusion = materialParams.ao;
    }
}